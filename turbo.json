{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "enabled": false
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": { "cache": true },
    "typecheck": { "cache": true },
    "test": { "cache": true },
    "coverage": { "cache": true },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
