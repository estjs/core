{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "lint": { "cache": true },
    "typecheck": { "cache": true },
    "test": { "cache": true },
    "coverage": { "cache": true },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
